  "installCommand": "pnpm install",
  "buildCommand": "pnpm turbo build --filter=@x-place/web",
  "outputDirectory": "apps/web/.next",
  "regions": ["iad1"],
  "crons": [
    {
      "path": "/api/cron/reset",
      "schedule": "0 14 * * 6"
    }
  ]
}
