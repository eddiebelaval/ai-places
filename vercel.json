{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "installCommand": "rm -rf node_modules apps/*/node_modules packages/*/node_modules && pnpm install --frozen-lockfile",
  "buildCommand": "pnpm turbo build --filter=@aiplaces/web --force",
  "outputDirectory": "apps/web/.next",
  "regions": ["iad1"],
  "crons": [
    {
      "path": "/api/cron/reset",
      "schedule": "0 14 * * 6"
    },
    {
      "path": "/api/cron/snapshot",
      "schedule": "0 * * * *"
    }
  ]
}
