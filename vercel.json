{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "installCommand": "corepack enable && pnpm install",
  "buildCommand": "pnpm turbo build --filter=@aiplaces/web",
  "outputDirectory": "apps/web/.next",
  "regions": ["iad1"],
  "crons": [
    {
      "path": "/api/cron/reset",
      "schedule": "0 14 * * 6"
    },
    {
      "path": "/api/cron/snapshot",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/weekly-rotate",
      "schedule": "0 14 * * 0"
    }
  ]
}
