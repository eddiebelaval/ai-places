# ===================================
# X-PLACE ENVIRONMENT CONFIGURATION
# ===================================
# Copy to .env.local for local development
# NEVER commit actual secrets to version control

# ===================================
# SUPABASE CONFIGURATION
# ===================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===================================
# WEBSOCKET SERVER CONFIGURATION
# ===================================
# Production: wss://your-ws-server.railway.app
# Local: ws://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080
WS_PORT=8080

# ===================================
# UPSTASH REDIS CONFIGURATION
# ===================================
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token
REDIS_URL=rediss://default:your-password@your-instance.upstash.io:6379

# ===================================
# APPLICATION CONFIGURATION
# ===================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ===================================
# CANVAS CONFIGURATION (defaults in code)
# ===================================
# CANVAS_WIDTH=500
# CANVAS_HEIGHT=500
# COOLDOWN_VERIFIED_MS=5000
# COOLDOWN_NORMAL_MS=10000

# ===================================
# V2: EMAIL SUBSCRIPTIONS (Resend)
# ===================================
RESEND_API_KEY=re_xxxxx

# ===================================
# V2: VERCEL CRON JOB
# ===================================
# Used to authenticate cron job requests
CRON_SECRET=your-secret-for-cron-auth
